# Database Configuration
DATABASE_URL=postgresql://clover:supersecret@localhost:5555/cloverdb

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1d

# Authentication Mode (basic or sso)
AUTH_MODE=basic

# SSO Configuration (for when AUTH_MODE=sso)
SSO_ISSUER_URL=https://auth.mycms.com/.well-known/openid-configuration
SSO_CLIENT_ID=clovercounts-dev
SSO_CLIENT_SECRET=your_client_secret

# Server Configuration
PORT=8080
NODE_ENV=development

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080
REACT_APP_AUTH_MODE=basic